.foodlist{
  display: flex;
  position: relative;
  /* justify-content: space-around; */
  /* margin-top: 10px; */
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.shop-img{
  width: 160px;
  height: 160px;
  margin-right: 20rpx;
} 
/* 店铺信息 */
.shop-info{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: left;
  font-size: 12px;
  width: 580rpx;
  line-height: 1.5;
  color:#666;
}
/* 店铺名称 */
.shop-dname{
   width: 380rpx;
  font-size: 16px;
  color: #333;
 
}
/* 打分 */
.pingfen{
position: absolute;
right: 20rpx;
top: 20rpx;  
}
.star-after{
  color:#e2e2e2;
}
.star-before{
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  color:#ff5500;
}
/* 通用功能：截取字符串添加省略号 */
.ell{
  overflow: hidden;  /*溢出隐藏*/
  white-space: nowrap ; /* 不换行*/
  text-overflow:ellipsis; /*补省略号*/
}