.slider,.slider swiper,.swiper-image{
  height:390rpx;
  width: 100%;
}
/* 九宫格 */
.index-nva{
  display: flex;
  flex-wrap: wrap;
}
.index-nva .nav-item{
  width:33.33333%;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  /* 子元素按列排 */
  flex-direction: column; 
  /* 水平居中 */
  justify-content: center;
  /* 垂直居中 */
  align-items: center;
  font-size: 14px;
  border-right:1px solid #ddd;
  border-bottom: 1px solid #ddd;

}
/* 去除3 6 9 右边的边线 */
.index-nva .nav-item:nth-child(3n){
  border-right:0px;
}

.index-nva .nav-item image{
  width: 40%;
  height:40%;
}

/* 底下两图片样式 */
 .index-tab{
  display: flex;
  justify-content: space-between;
} 

 .index-tab .left{
   width: 49.5%;
   height: 200rpx;
  box-sizing: border-box;
  display: flex;
}  
.index-tab .left image{
  width: 100%;
  height: 100%;
} 

